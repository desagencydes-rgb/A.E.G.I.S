# AEGIS Environment Configuration

# Ollama Configuration
OLLAMA_HOST=http://127.0.0.1:11434
OLLAMA_PROXY_PORT=11435

# Mode Configuration
DEFAULT_MODE=normal  # normal or monster
CURRENT_MODEL=hermes3:8b

# Permission System
DANGEROUS_PERMISSION_CODE=yesyesyes45

# Memory Configuration
CHROMADB_PATH=./data/vector_db
SQLITE_DB_PATH=./data/aegis.db
EMBEDDING_MODEL=nomic-embed-text

# Agent Configuration
MAX_CONTEXT_TOKENS=16384
AGENT_TIMEOUT_SECONDS=120

# Tool Configuration
ENABLE_WEB_SEARCH=true
ENABLE_GIT_OPERATIONS=true
ENABLE_DANGEROUS_OPS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/memory/logs/aegis.log

# Peer Integration (MCP)
MCP_SERVER_ENABLED=false
MCP_SERVER_PORT=3000
